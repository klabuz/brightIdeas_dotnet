@{
    ViewData["Title"] = "Post details";
}

<p class="text-right">
    <a class="btn btn-primary" href="/ideas">Ideas</a>
    <a class="btn btn-primary" href="/logout">Logout</a>
</p>

<div class="row">
    <div class="col-12">
        <h4><a href="/show/@ViewBag.thisPost.creator.userId">@ViewBag.thisPost.creator.alias</a> says:</h4>
    </div>
</div>
<div class="row">
    <div class="col-1"></div>
    <div class="col-11">
        <p>@ViewBag.thisPost.content</p>
    </div>
</div>
<hr>
<h5>These People Like this Post:</h5>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Alias</th>
      <th scope="col">Name</th>
    </tr>
  </thead>
  <tbody>

@{
    foreach (var like in ViewBag.thisPost.likes)
    {
  
    <tr>    
      <td><a href="/show/@like.user.userId">@like.user.alias</a></td>
      <td>@like.user.name</td>
    </tr>
    
      
    }
}
    

  </tbody>
</table>

